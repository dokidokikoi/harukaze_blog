<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.harukaze.blog.app.dao.TodoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.harukaze.blog.app.entity.TodoEntity" id="todoMap">
        <result property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="isDone" column="is_done"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <select id="selectTodoList" resultType="TodoEntity">
        SELECT id, content, is_done, create_date
        FROM hk_todo
        <where>
            1 = 1
            <if test="key != null">
                AND content LIKE CONCAT('%',#{key},'%')
            </if>
            <if test="done != null">
                AND is_done = #{done}
            </if>
            <if test="days != null">
                AND FROM_UNIXTIME(create_date/1000) > DATE_SUB(CURDATE(), INTERVAL #{days} DAY)
            </if>
        </where>
    </select>
</mapper>